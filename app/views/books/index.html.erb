 <head>
 	<meta charset="utf-8">
 	<title></title>
 	<link rel="stylesheet" href="Bookers1/assets/application.css">
 </head>
 <h1>Books</h1>
 <table>
 	<tr>
 		<th>Title</th>
 		<th>Body</th>
 		<th colspan="3"></th>
 	</tr>
 	        <% @books.each do |book| %>

 	<tr>
 		<td><%= book.title %></td>
 		<td><%= book.body %></td>
 		<td><%= link_to "Show", book_path(book) %></td>
 		<td>              <%= link_to "Edit", edit_book_path(id: book.id) %>
        </td>
 		<td><%= link_to "Destroy", book_path(id: book.id), method: :delete, data: {confirm: "Are you sure?"} %>
        </td>

 	</tr>
 	        <% end %>
 </table>








<h3>New book</h3>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
    <h3>入力した内容にエラーが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
 
    <h4>title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
 
    <br><%= f.submit 'Create Book' %>
 
<% end %>